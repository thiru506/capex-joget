{
    title : '@@app.edm.label.notification@@',
    properties : [
        {
            name : 'host',
            label : '@@app.emailtool.host@@',
            type : 'textfield'
        },
        {
            name : 'port',
            label : '@@app.emailtool.port@@',
            type : 'textfield'
        },
        {
            name : 'security',
            label : '@@app.emailtool.security@@',
            type : 'selectbox',
            options : [{
                value : '',
                label : ''
            },
            {
                value : 'TLS',
                label : '@@app.emailtool.security.tls@@'
            },
            {
                value : 'SSL',
                label : '@@app.emailtool.security.ssl@@'
            }]
        },
        {
            name : 'username',
            label : '@@app.emailtool.username@@',
            type : 'textfield'
        },
        {
            name : 'password',
            label : '@@app.emailtool.password@@',
            type : 'password'
        },
        {
            name : 'from',
            label : '@@app.emailtool.from@@',
            type : 'textfield',
            regex_validation : '^[_A-Za-z0-9-]+(\\.[_A-Za-z0-9-]+)*@[A-Za-z0-9-]+(\\.[A-Za-z0-9-]+)*(\\.[A-Za-z-]{2,})$',
            validation_message : '@@app.edm.message.invalidEmailFormat@@'
        },
        {
            name : 'cc',
            label : '@@app.emailtool.cc@@',
            type : 'textfield'
        },
        {
            name : 'isHtml',
            label : '@@app.emailtool.isHtml@@',
            type : 'checkbox',
            value : 'false',
            options : [{
                value : 'true',
                label : ''
            }]
        },
        {
            name : 'userCreationSubject',
            label : '@@app.edm.label.userCreationSubject@@',
            type : 'textfield',
            value : '@@app.edm.message.userCreationSubject@@'
        },
        {
            name : 'userCreationMessage',
            label : '@@app.edm.label.userCreationMessage@@',
            type : 'textarea',
            cols : '60',
            rows : '15',
            value : '@@app.edm.message.userCreationMessage@@'
        },
        {
            name : 'passwordResetSubject',
            label : '@@app.edm.label.passwordResetSubject@@',
            type : 'textfield',
            value : '@@app.edm.message.passwordResetSubject@@'
        },
        {
            name : 'passwordResetMessage',
