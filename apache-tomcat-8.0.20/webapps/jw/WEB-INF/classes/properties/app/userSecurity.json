        {
            name : 'forgotPasswordMessage',
            label : '@@app.edm.label.forgotPasswordMessage@@',
            type : 'textarea',
            cols : '60',
            rows : '15',
            value : '@@app.edm.message.forgotPasswordMessage@@'
